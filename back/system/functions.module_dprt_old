            $imgname = "";
			if ($imagen['error'] != 4)
			{
				$imgname = uniqid().'_'.strtolower(str_replace(' ', '-', str_replace($this->no_permitidas, $this->permitidas , $nombre))) . "." . strtolower(end(explode(".", $imagen['name'])));
				move_uploaded_file($imagen['tmp_name'], '../imagenesproductos/'.$imgname);
