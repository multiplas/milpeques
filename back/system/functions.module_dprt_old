                            msgtop = '$msgtop', msgbottom = '$msgbottom', msgdiasmax = '$msgdiasmax', dominio = '$dominio', descripcionHTML = '$descripcionHTML', impuesto = $impuesto, desglose = $desglose, moneda = '$divisa',
