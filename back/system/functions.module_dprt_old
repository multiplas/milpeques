                        SET MM_anchoMax = '$MM_anchoMax', MM_fondo = '$MM_fondo', MM_divisiones = '$MM_divisiones', MM_colores = '$MM_colores', MM_despliegue = '$MM_despliegue', Napartados = '$Napartados'
