			$nombre = mysqli_real_escape_string($this->conexion, htmlspecialchars($nombre));

			$sql = "INSERT INTO bd_campos_pedido VALUES
					(null, '$nombre', '$tipo');";
			$query = mysqli_query($this->conexion, $sql);
			
			return $query;
		}
        
